// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER or ADMIN
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  components    Component[]
}


model Catalog {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String      // e.g. "Navbar", "Button"
  slug        String      @unique
  description String?
  group       String      // e.g. "Navigation Components", "Foundation"
  
  components  Component[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Component {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  code        String   // JSON or Stringified content
  framework   String   @default("react") // react, vue, html, etc.
  category    String   @default("Uncategorized") // "Buttons", "Navbars" etc.
  tags        String?  // Comma separated tags
  previewConfig String? // JSON string for custom props/config
  installationSteps String? // Markdown content
  isOfficial  Boolean  @default(false)
  views       Int      @default(0)
  
  catalogId   String?     @db.ObjectId
  catalog     Catalog?    @relation(fields: [catalogId], references: [id])

  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
